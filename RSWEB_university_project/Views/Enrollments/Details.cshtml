@model RSWEB_university_project.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseID">
                @Html.DisplayFor(model => model.Course.Title)
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentID">
                @Html.DisplayFor(model => model.Student.FullName)
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Semestar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semestar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeminalUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeminalUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExamPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExamPoints)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeminalPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeminalPoints)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectPoints)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdditionalPoints)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinishDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinishDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="getStudentsByCourse" asp-route-id="@ViewData["selectedCrs"]">Back</a>
</div>
